<h1>New Post</h1>

<%= form_with :model => @post do |form| %>
  <p>
    <%= form.label "author", "Your name" %>
    <%= form.text_field "author" %>
  </p>
  <p>
    <%= form.label "Post copy" %>
    <%= form.text_field "body" %>
    <%= form.label "Image url" %>
    <%= form.text_field "image" %>
  </p>
  <%= form.submit %>
<% end %>