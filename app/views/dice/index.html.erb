<%
  die1 = rand(1..6)
  die2 = rand(1..6)
  total = die1 + die2
%>

<% if @username %>
<h1>Roll the dice, <%= @username %></h1>
<p>
  <img src="/images/dice/<%= @die1 %>.svg">
  <img src="/images/dice/<%= @die2 %>.svg">
</p>
<p>
  The total is <%= @total %>
</p>
<p>
  <a href="/dice?username= <% @username %>">Roll Again</a>
</p>
<%else %>
  <h1> Welcome, what's your name? </h1>
  <form action = "/dice">
    <input type = "text" name = "username">
    <button> let's play!</button>
  </form>

  <% end %>